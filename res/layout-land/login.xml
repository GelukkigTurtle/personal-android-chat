<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 
    android:orientation="vertical" >
<!-- 	android:background="@drawable/background_login_portrait" -->
    
    
        <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="-50dp"
            android:layout_marginTop="290dp"
            android:background="@color/fondologin"
            android:gravity="center_vertical" >

        <ImageButton
            android:id="@+id/loginbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:onClick="lanzar"
            android:src="@drawable/nextclic"
            android:layout_marginTop="100dp" 
            android:layout_marginLeft="245dp"/>

        <TextView
            android:id="@+id/txtUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingLeft="20dp"
            android:text="               "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imbcancela"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="5dp"
            android:paddingLeft="20dp"
            android:text="               "
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etextusuario"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_alignRight="@+id/linearLayout1"
            android:layout_toRightOf="@+id/txtPass"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="30dp"
            android:singleLine="true"
            android:textColor="#FFCCCCCC"
            android:textSize="16sp"
			android:hint="usuario" >
        
                    <requestFocus />
        </EditText>
        
        <EditText
            android:id="@+id/etextpassword"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginTop="50dp"
            android:layout_alignBottom="@+id/txtPass"
            android:layout_alignLeft="@+id/etextusuario"
            android:background="@null"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:textColor="#FFCCCCCC"
            android:textSize="16sp"
            android:hint="password" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtUsuario"
            android:layout_marginLeft="100dp"
           
            android:paddingLeft="90dp"
            android:layout_marginRight="40dp" >
        </LinearLayout>
<!--  android:background="@drawable/input_login" -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtPass"
            android:layout_marginLeft="100dp"
            
            android:paddingLeft="200dp"
            android:layout_marginRight="40dp" >
                    <!-- android:background="@drawable/input_login" -->

        </LinearLayout>
        
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"
        />

</LinearLayout>